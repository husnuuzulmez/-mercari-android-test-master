<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="135dp"
    android:layout_height="155dp"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="135dp"
        android:layout_height="155dp">

        <RelativeLayout

            android:layout_width="135dp"
            android:layout_height="135dp">


            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0.dp"
                android:adjustViewBounds="true"
                tools:layout_marginLeft="0dp"
                tools:layout_marginRight="0dp" />

            <ImageView
                android:id="@+id/ivImagesold"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0.dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="true"
                tools:layout_marginLeft="0dp"
                tools:layout_marginRight="0dp" />

            <TextView
                style="@style/black_14_white"
                android:id="@+id/tvPrice"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="11dp"
                android:textAlignment="textEnd"
                tools:layout_marginLeft="20dp" />

        </RelativeLayout>

        <TextView
            style="@style/regular_14_black_70op"
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:text="Description"
            tools:layout_marginLeft="2dp" />

    </RelativeLayout>

</RelativeLayout>